<% if @record.errors.any? %>
  <div>
    <ul>
      <% @record.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model: @record, local: true do |f| %>
  <div>
    <%= f.label :title, 'タイトル' %><br>
    <%= f.text_field :title %>
  </div>

  <div>
    <%= f.label :memo, 'メモ' %><br>
    <%= f.text_area :memo %>
  </div>

  <div>
    <%= f.label :date, '日付' %><br>
    <%= f.date_field :date %>
  </div>

  <div>
    <%= f.submit '記録する' %>
  </div>
<% end %>
